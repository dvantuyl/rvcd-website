<ol reversed class="w-full">
{% for post in collections.post | reverse %}
  <li class="h-auto lg:h-80 w-full rounded z-50 mb-10 shadow-lg">
    <a href="{{ post.url | url }}" class="flex flex-col-reverse lg:flex-row w-full justify-end h-full">
      <div class="flex-grow py-5 pl-10 pr-5 flex flex-col overflow-hidden relative h-auto lg:h-full bg-gradient-to-r from-chocolate-100 to-chocolate-200">
        <div class="border-r-4 border-blush-700 border-opacity-10 border-dashed h-full pr-5">
          <div class="flex-none mb-5">
            <h4 class="block font-subtitle text-blush-700 text-3xl font-semibold">
              {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
            </h4>
            <time class="text-gray-800 text-xl font-semibold" datetime="{{ post.date | dateToFormat('yyyy-LL-dd') }}">{{ post.date | dateToFormat('dd LLL yyyy') }}</time>
          </div>
          <article class="text-gray-800 font-default hidden lg:block text-xl overflow-ellipsis overflow-hidden flex-grow rounded">
            {{post.data.blurb}}
          </article>
        </div>
      </div>
      <div class="h-full w-full lg:w-1/2 flex-none">
        <img src="{{ post.data.image_url }}" class="h-full w-full object-cover rounded-tr rounded-br max-h-80" />
      </div>
    </a>
  </li>
{% endfor %}
</ol>
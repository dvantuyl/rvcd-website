<ol reversed class="w-full">
{% for post in collections.home | reverse %}
  <li class="flex flex-col h-auto lg:h-80 w-full rounded z-50 mb-10 shadow-lg bg-gradient-to-r from-chocolate-100 to-chocolate-200">
    <div class="block lg:hidden h-4 bg-blush-700 flex-none rounded-tl rounded-tr"></div>
    <div class="hidden lg:block ml-4 mt-4 h-4 bg-gradient-to-r from-blush-700 to-chocolate-200 bg-opacity-10 flex-none rounded"></div>
    <a href="{{ post.url | url }}" class="flex flex-col-reverse lg:flex-row w-full justify-end h-full flex-grow">
      <div class="flex-grow py-5 pl-10 pr-5 flex flex-col overflow-hidden relative h-auto lg:h-full ">
        <div class="border-r-4 border-blush-700 border-opacity-10 border-dashed h-full pr-4">
          <div class="flex-none mb-5">
            <h4 class="block font-subtitle text-blush-800 text-3xl font-semibold">
              {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
            </h4>
          </div>
          <article class="text-chocolate-900 font-default hidden 2xl:block text-xl overflow-ellipsis overflow-hidden flex-grow rounded">
            {{post.data.blurb}}
          </article>
        </div>
      </div>
      <div class="h-full w-full py-4 lg:w-1/2 flex-none">
        <img src="{{ post.data.image_url }}" class="h-full w-full object-contain rounded-tr rounded-br max-h-60" />
      </div>
    </a>
  </li>
{% endfor %}
</ol>